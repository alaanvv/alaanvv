#!/bin/bash

case "$1" in
  on)
    echo 1 | tee /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode
    ;;
  off)
    echo 0 | tee /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode
    ;;
  help)
    echo "Usage: $0 {on|off}"
    ;;
  *)
    cat /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode
    ;;
esac
